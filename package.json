{
  "name": "yourfavoriteservice",
  "version": "0.0.1",
  "description": "A collection of personal Discord bots for programming productivity",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "monitoring:dev": "cd packages/monitoring-service && bun --env-file=.env.development --watch src/index.ts",
    "monitoring:prod": "cd packages/monitoring-service && NODE_ENV=production bun src/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}